<div class="modal-header">
  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-header position-relative border-0 pb-0">
  <h1 class="modal-title m-0 w-100 text-center"><%= project.name %></h1>
  <button type="button" class="btn-close btn-close-white position-absolute end-0 top-0 mt-3 me-3" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<% photos = project.photos %>

<div id="projectCarousel" class="carousel slide" data-bs-ride="carousel">
<div class="carousel-inner">
  <% photos.each_with_index do |photo, index| %>
    <div class="carousel-item <%= 'active' if index.zero? %>">
      <%= image_tag photo, class: "fullscreen-image d-block w-100" %>
    </div>
  <% end %>
</div>

  <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>


</div>

<p class="mt-3"><%= project.description %></p>

<div class="modal-footer">
</div>
