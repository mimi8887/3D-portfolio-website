<div class="index-page bg-black">
  <div class="container-fluid mt-4 pt-5">
    <div class="apps px-3">
      <div class="row mt-3">
        <% @applications.each do |application| %>
          <div class="col-md-6 col-sm-12">
            <div class="application-card p-3 mx-2">
              <% application.photos.each do |photo| %>
                <%= link_to application.link, target: "_blank", rel: "noopener" do %>
                  <%= image_tag photo, alt: application.name, class: "img-fluid" %>
                <% end %>
              <% end %>
              <p class="mt-3 mx-1"><%= application.description %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
